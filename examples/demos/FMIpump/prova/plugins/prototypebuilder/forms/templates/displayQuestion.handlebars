<div class="form-center">
    <div class="panel panel-info shadow center">
        <div class="panel-heading">{{header}}</div>
        <div class="panel-body">
                <p>{{question}}</p>
        </div>
        <div class="panel-footer">
            <button type="button" class="btn btn-default left" id="btnCancel">
                {{#if buttons}} {{buttons.[0]}} {{else}} Cancel {{/if}}
            </button>
            <button type="submit" class="btn btn-{{primaryLevel}} right" id="btnOk">
                {{#if buttons}} {{buttons.[1]}} {{else}} Ok {{/if}}
            </button>
        </div>
    </div>
</div>
